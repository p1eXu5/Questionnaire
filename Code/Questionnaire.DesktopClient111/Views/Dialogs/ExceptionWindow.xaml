<Window x:Class="Questionnaire.DesktopClient.Views.Dialogs.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Questionnaire.DesktopClient.Views.Dialogs"
        mc:Ignorable="d"
        Title="ExceptionWindow" 
        Height="300" Width="600"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        >
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock TextWrapping="Wrap" 
                   Foreground="Maroon"
                   Margin="50"
                   >
            <Run>Что-то пошло не так. Обратитесь к</Run>
            <Bold>Всегалактическому Бинарному Магистру.</Bold>
        </TextBlock>
        <Button Background="Orange" Width="153" Foreground="Black"
                Margin="50" Click="Button_Click"
                >
            Завершить работу
        </Button>
    </StackPanel>
</Window>
