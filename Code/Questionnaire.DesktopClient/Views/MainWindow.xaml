<Window x:Class="Questionnaire.DesktopClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Questionnaire.DesktopClient"
        xmlns:uc="clr-namespace:Questionnaire.DesktopClient.Views.UserControls"
        mc:Ignorable="d"

        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"

        Title="MainWindow" Height="600" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem>
                <MenuItem.Header>
                    <TextBlock Text="File" />
                </MenuItem.Header>

                <MenuItem Header="Выбрать опросник" />
                <MenuItem Header="Экспорт результатов" />
                <Separator />
                <MenuItem Header="Выход" />
            </MenuItem>
        </Menu>

        <Grid>
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="Visible"
                        >
                <ComboBox Margin="20,20,20,0" ItemsSource="{Binding Firms}" 
                          SelectedItem="{Binding SelectedFirm}"
                          Width="300"
                          
                          />
                <ComboBox Margin="20" ItemsSource="{Binding Firms}" 
                          SelectedItem="{Binding SelectedFirm}"
                          Width="300"
                          />
                <Button Content="Начать тест" Background="Transparent" 
                        Foreground="{DynamicResource MaterialDesignLightForeground}"
                        Width="150"
                        Margin="0,20"
                        />
            </StackPanel>

            <Grid Visibility="Collapsed">
                <uc:QuestionsView Width="700" Height="Auto" >
                    <uc:QuestionsView.Style>
                        <Style TargetType="UserControl">
                            <Setter Property="Opacity" Value="1" />
                            <Setter Property="IsHitTestVisible" Value="True" />
                        </Style>
                    </uc:QuestionsView.Style>
                </uc:QuestionsView>

                <uc:QuestionsView >
                    <uc:QuestionsView.Style>
                        <Style TargetType="UserControl">
                            <Setter Property="Opacity" Value="0" />
                            <Setter Property="IsHitTestVisible" Value="True" />
                        </Style>
                    </uc:QuestionsView.Style>
                </uc:QuestionsView>
            </Grid>

        </Grid>
    </DockPanel>
</Window>
